#!/usr/bin/env bash

# See https://direnv.net for more information on this file

set -o errexit
set -o nounset
set -o pipefail

# Check for Python 'venv' and activate it
[[ -d .venv ]] || python3 -m venv .venv
source .venv/bin/activate

# Upgrade pip and install requirements
pip install --quiet --upgrade pip
pip install --quiet --requirement requirements.txt

pre-commit install --install-hooks

# Configure specific IDE configuration based on 'env'-variables
## VSCode / VSCodium (https://github.com/VSCodium/vscodium)
envsubst < .vscode/settings.json > .vscode/settings.json.tmp \
  && mv .vscode/settings.json.tmp .vscode/settings.json
